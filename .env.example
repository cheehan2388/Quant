# Bybit API Keys (Required - for trading)
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_SECRET=your_bybit_secret_here

# Binance API Keys (Optional - for data fetching, can be read-only)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET=your_binance_secret_here

# Trading Configuration
SYMBOL=BTCUSDT
POSITION_SIZE=0.001
Z_SCORE_THRESHOLD=2.1
ROLLING_WINDOW=15
MAX_POSITION_TIME_HOURS=1.0
MAX_DAILY_TRADES=10
MAX_CONSECUTIVE_LOSSES=3
# STOP_LOSS_PCT=2.0  # Optional: Stop loss percentage
# TAKE_PROFIT_PCT=5.0  # Optional: Take profit percentage

# Data Configuration
FETCH_ON_HOUR_MARK=true
RETRY_INTERVAL_MINUTES=1
MAX_RETRY_ATTEMPTS=10
BINANCE_LS_PERIOD=5m
INITIAL_DATA_HOURS=24
MAX_STALE_DATA_TOLERANCE=3
DATA_FRESHNESS_THRESHOLD_MINUTES=10

# Exchange Configuration
BYBIT_TESTNET=true
ORDER_TIMEOUT_SECONDS=30
ORDER_RETRY_ATTEMPTS=3

# System Configuration
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
STATUS_LOG_INTERVAL_MINUTES=10
PERFORMANCE_LOG_INTERVAL_MINUTES=60
SAVE_DATA_TO_FILE=true
DATA_FILE_PATH=data/trading_data.csv
ENABLE_TRADING=true
DRY_RUN_MODE=false